.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  background-color:#1296db;
  border:1rpx solid #1296db;

}

/* 搜索框提示文字样式 */
.search input
{
  margin:0 auto;
  width: 92%;
  font-size:26rpx;
  height: 60rpx;
  padding-left:30rpx; 
  background: #EFEFF5;
  border-radius: 10rpx;
}

/* 搜索框小图标 */
.search image
{ 
  z-index: 25;
  right: 40rpx;
  position: absolute;
  height: 22rpx;
  width: 22rpx;
}
/**index.wxss**/
.swiper__container{
    height: 11rem;
}
.swiper__desc{
    position: absolute;
    width:100%;
    bottom: 0;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 28rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper__item{
    display: block;
    width: 100%;
    height: 11rem;
}

.swiper__id{
    float: right;
    padding-right: 20rpx;
    font-weight: 700;
}

/* header 部分导航 */
.header{
    width: 100%;
    background-color: #1296db;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    height: 72rpx;
    position: relative;
}
.sv__container{
    height: 72rpx;
    white-space: nowrap;
}
.sv__item{
   font-size:28rpx;
    padding: 14rpx;
    display: inline-block;
}
.sv-manager{
    padding-left:20rpx;
    width: 1rem;
    height: 1rem;
    vertical-align: center;
}